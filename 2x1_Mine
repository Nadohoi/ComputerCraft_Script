function init()
    print("Enter how many steps you want the turtle to mine: ")
    num = io.read()
    num = tonumber(num)
    if num > 0 then
        print("Bone method?(y/n): ")
        bone = io.read()
        if bone ~= "y" or bone ~= "n" then
            print("Wrong input, try again.")
        end
    else:
        print("Steps must be larger than 0")
    end
end
 
function mine()
    local flag
    flag = 0

    for i=1,num do 
        if bone == "y" then
            flag = flag + 1
        end

        turtle.dig()
        turtle.forward()
        turtle.digUp()

        if flag == 2:
            turtle.turnLeft()
            turtle.dig()
            turtle.up()
            turtle.dig()
            turtle.turnRight()
            turtle.turnRight()
            turtle.dig()
            turtle.down()
            turtle.dig()
            turtle.turnLeft()
            flag = 0
        end
    end
end
 
function main()
    init()
    mine()
end
 
main()
